import tkinter as tk
from tkinter import messagebox

import tkinter as tk


class ScheduleGUI:
    def __init__(self):
        self.tasks = []
        self.master = tk.Tk()
        self.master.geometry("400x400")
        self.master.title("Schedule Manager")
        self.frame = tk.Frame(self.master)
        self.frame.pack()
        self.add_entry()
        self.add_buttons()

        self.task_entry = None

        self.master.mainloop()

    def add_buttons(self):
        self.add_button = tk.Button(self.frame, text="Create Task", command=self.add_entry)
        self.add_button.pack()

    def add_entry(self):
        self.task_entry = tk.Entry(self.frame)
        self.task_entry.pack()

    def add_task(self):
        task = self.entry.get()
        self.tasks.append(task)
        self.entry.delete(0, tk.END)
        print(self.tasks)

app = ScheduleGUI()
