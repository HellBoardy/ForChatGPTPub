import tkinter as tk

class ScheduleGUI:
    def __init__(self):
        self.root = tk.Tk()
        self.root.geometry("400x400")
        self.root.title("Schedule")
        self.frame = tk.Frame(self.root)
        self.frame.pack(expand=True)
        self.add_buttons()
        self.add_task_entry()

    def add_buttons(self):
        self.add_button = tk.Button(self.frame, text="Добавить задачу", command=self.add_task_entry)
        self.add_button.pack(side="left")
        self.quit_button = tk.Button(self.frame, text="Выход", command=self.root.quit)
        self.quit_button.pack(side="right")

    def add_task_entry(self):
        self.task_entry = tk.Entry(self.root)
        self.task_entry.pack(side="top", padx=5, pady=5)

    def run(self):
        self.root.mainloop()

app = ScheduleGUI()
app.run()
