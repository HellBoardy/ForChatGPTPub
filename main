import tkinter as tk
from tkinter import messagebox

class ScheduleGUI(tk.Tk):
    def __init__(self):
        tk.Tk.__init__(self)
        self.title("Schedule Manager")
        self.geometry("400x400")
        self.resizable(False, False)
        self.configure(bg='#6a9c6d')
        self.create_widgets()

    def create_widgets(self):
        self.frame = tk.Frame(self.master)
        self.frame.pack()

        self.add_button = tk.Button(self.frame, text="Add Task")
        self.add_button.pack(side=tk.LEFT)

        self.del_button = tk.Button(self.frame, text="Delete Task")
        self.del_button.pack(side=tk.LEFT)

        self.quit_button = tk.Button(self.frame, text="Quit", command=self.master.quit)
        self.quit_button.pack(side=tk.LEFT)

app = ScheduleGUI()
app.mainloop()
