import tkinter as tk
from tkinter import messagebox

import tkinter as tk


class ScheduleGUI:
    def __init__(self):
        self.master = tk.Tk()
        self.master.geometry("400x400")
        self.master.title("Schedule Manager")
        self.add_buttons()
        self.master.mainloop()

    def add_buttons(self):
        self.frame = tk.Frame(self.master)
        self.frame.pack()

        self.add_button = tk.Button(self.frame, text="Create Task")
        self.add_button.pack()

app = ScheduleGUI()
app.mainloop()
